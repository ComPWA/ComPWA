########### GenevaIF lib #############
import os ;

local GENEVA = [ os.environ GENEVA ] ;
local BOOST_BUILD_PATH = [ os.environ BOOST_BUILD_PATH ] ;

BOOSTLIBS = -lboost_date_time -lboost_filesystem -lboost_program_options -lboost_regex -lboost_serialization -lboost_system -lboost_thread -lboost_test_exec_monitor -L$(BOOST_BUILD_PATH)/lib ;

lib Geneva : :  <file>$(GENEVA)/lib/libgemfony-common.so
                <file>$(GENEVA)/lib/libgemfony-courtier.so
                <file>$(GENEVA)/lib/libgemfony-geneva-individuals.so
                <file>$(GENEVA)/lib/libgemfony-geneva.so
                <file>$(GENEVA)/lib/libgemfony-hap.so
                : : ;
               

project :
	requirements 
	  <include>$(BOOST_BUILD_PATH)/include
	  <include>$(GENEVA)/include
	  <linkflags>$(BOOSTLIBS)
	;

lib GenevaIF : 
        [ glob *.cpp ] 
        $(TOP)/Core//ComPWA
        : <use>$(TOP)/Optimizer/Geneva//Geneva
        : <library>$(TOP)/Optimizer/Geneva//Geneva
        ;

install dist : GenevaIF : <location>$(TOP)/lib ;

