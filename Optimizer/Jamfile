########### Optimizer Jamfile #############
path-constant OPTIMIZER : . ;

# libOptimizer.so will consist of these packages:
build-project Minuit2 ;

# Build libOptimizer.so
lib Optimizer : 
        [ glob *.cpp ]
        $(OPTIMIZER)/Minuit2//Minuit2
        ;

install dist : Optimizer : <location>$(TOP)/lib ;
