########### OIFGeneva lib #############
import os ;

local GENEVA = [ os.environ GENEVA ] ;
local BOOST_BUILD_PATH = [ os.environ BOOST_BUILD_PATH ] ;

BOOSTLIBS = -lboost_date_time -lboost_filesystem -lboost_program_options -lboost_regex -lboost_serialization -lboost_system -lboost_thread-mt -lboost_test_exec_monitor ;

lib Geneva : :  <file>$(GENEVA)/lib/libgemfony-common.so
                <file>$(GENEVA)/lib/libgemfony-courtier.so
                <file>$(GENEVA)/lib/libgemfony-geneva-individuals.so
                <file>$(GENEVA)/lib/libgemfony-geneva.so
                <file>$(GENEVA)/lib/libgemfony-hap.so
                : : ;

project :
	requirements <include>./
        <include>$(TOP)/Core
	<include>$(BOOST_BUILD_PATH)/include
	<include>$(GENEVA)/include
	<cxxflags>-ftemplate-depth-256
	<cxxflags>-std=c++0x
	<linkflags>$(BOOSTLIBS)
	;

lib OIFGeneva : 
        [ glob *.cpp ] 
   #     OIFGeneva//OIFGeneva  
        : <use>$(TOP)/OIFGeneva//Geneva
        : <library>$(TOP)/OIFGeneva//Geneva

install dist : OIFGeneva : <location>$(TOP)/lib ;

