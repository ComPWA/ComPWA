########### Physics Jamfile #############
path-constant PHYSICS : . ;

# libPhysics.so will consist of these packages:

sources = [ glob *.cpp ] ;
if $(build_AmplitudeSum) && $(build_AmplitudeSum) != 0
{
	build-project AmplitudeSum ;
	sources = $(sources) $(PHYSICS)/AmplitudeSum//AmplitudeSum ;
}
if $(build_DPKinematics) && $(build_DPKinematics) != 0
{
	build-project DPKinematics ;
	sources = $(sources) $(PHYSICS)/DPKinematics//DPKinematics ;
}
if $(build_BreitWigner) && $(build_BreitWigner) != 0
{
	build-project BreitWigner ;
	sources = $(sources) $(PHYSICS)/BreitWigner//BreitWigner ;
}
if $(build_Background) && $(build_Background) != 0
{
	build-project Background ;
	sources = $(sources) $(PHYSICS)/Background//Background ;
}
if $(build_DecayTree) && $(build_DecayTree) != 0
{
	build-project DecayTree ;
	sources = $(sources) $(PHYSICS)/DecayTree//DecayTree ;
}
if $(build_DynamicalDecayFunctions) && $(build_DynamicalDecayFunctions) != 0
{
	build-project DynamicalDecayFunctions ;
	sources = $(sources) $(PHYSICS)/DynamicalDecayFunctions//DynamicalDecayFunctions ;
}
if $(build_HelicityAmplitude) && $(build_HelicityAmplitude) != 0
{
	build-project HelicityAmplitude ;
	sources = $(sources) $(PHYSICS)/HelicityAmplitude//HelicityAmplitude ;
}

# Build libPhysics.so
lib Physics : 
        $(sources)
;

install dist : Physics : <location>$(TOP)/lib ;
