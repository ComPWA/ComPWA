########### PIFBW lib #############

project :
	requirements <include>./
        <include>$(TOP)/Core
	<include>$(BOOST_BUILD_PATH)/include
	<cxxflags>-ftemplate-depth-256
	<cxxflags>-std=c++0x
	<linkflags>$(BOOSTLIBS)
	;

lib PIFBW : 
        [ glob *.cpp ] ;

install dist : PIFBW : <location>$(TOP)/lib ;
