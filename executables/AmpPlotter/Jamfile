########### Amplitude Plotter applications #############

project ComPWA/executables/AmpPlotter
	: requirements 
	  <include>.

       <library>/boost//program_options
       <library>/boost//filesystem
       <library>/boost//serialization
      <library>/boost//thread
      <library>/boost//system
      <library>/boost//date_time
      <library>/boost//log
      <library>/boost//log_setup


	  <library>/root
	  <linkflags>-lRooFit
	  <linkflags>-lGui
	  <linkflags>-lRooFitCore
	  <linkflags>-lboost_unit_test_framework
	  <library>$(TOP)//qft++ ;
	  
lib ampplotter : 
        [ glob *.cpp : *App.cpp ]
        $(TOP)/Optimizer//Optimizer
        : : ;
        

exe ampplotterApp : 
        AmpPlotterApp.cpp 
        ampplotter
        $(TOP)/Core//ComPWA
        $(TOP)/Physics/BreitWigner//BreitWigner
        : ;
        

install dist 
	: ampplotter 
	: <threading>single
	  <location>$(TOP)/lib ;
        
install dist2 
	: 	  ampplotterApp 
	: <threading>single
	  <location>$(TOP)/bin ;

