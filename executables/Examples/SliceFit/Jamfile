########### SliceFit applications #############

project ComPWA/executables/SliceFit
	: requirements 
	  <include>.

       <library>/boost//program_options
       <library>/boost//filesystem
       <library>/boost//serialization
      <library>/boost//thread
      <library>/boost//system
      <library>/boost//date_time
      <library>/boost//log
      <library>/boost//log_setup


	  <library>/root
	  <linkflags>-lRooFit
	  <linkflags>-lGui
	  <linkflags>-lRooFitCore
	  <linkflags>-lboost_unit_test_framework
	  <library>$(TOP)//qft++ ;
	  
lib slicefit : 
        [ glob *.cpp : *App.cpp ]
        $(TOP)/Optimizer//Optimizer
        : : ;
        
exe slicefitApp : 
        SliceFitApp.cpp 
        slicefit
        $(TOP)/Core//ComPWA
        $(TOP)/Physics/AmplitudeSum//AmplitudeSum
        $(TOP)/Physics/DPKinematics//DPKinematics
        $(TOP)/DataReader/RootReader//RootReader
        $(TOP)/DataReader/JakeReader//JakeReader
        $(TOP)/Estimator/SliceFit//SliceFit
        $(TOP)/Optimizer/Minuit2//Minuit2IF
        $(TOP)/Physics/DPKinematics//DPKinematics
        : ;
        
exe slicefitubApp : 
        SliceFitUBApp.cpp 
        slicefit
        $(TOP)/Core//ComPWA
        $(TOP)/Physics/AmplitudeSum//AmplitudeSum
        $(TOP)/Physics/DPKinematics//DPKinematics  
        $(TOP)/DataReader/RootReader//RootReader
        $(TOP)/DataReader/JakeReader//JakeReader
        $(TOP)/Estimator/SliceFitUB//SliceFitUB
        $(TOP)/Optimizer/Minuit2//Minuit2IF
        $(TOP)/Physics/DPKinematics//DPKinematics  
        : ;
        
exe slicefitrandApp : 
        SliceFitRANDApp.cpp 
        slicefit
        $(TOP)/Core//ComPWA
        $(TOP)/Physics/AmplitudeSum//AmplitudeSum
        $(TOP)/Physics/DPKinematics//DPKinematics  
        $(TOP)/DataReader/RootReader//RootReader
        $(TOP)/Estimator/SliceFitUB//SliceFitUB
        $(TOP)/Optimizer/Minuit2//Minuit2IF
        $(TOP)/Physics/DPKinematics//DPKinematics  
        : ;


install dist 
	: slicefit 
	: <threading>single
	  <location>$(TOP)/lib ;
        
install dist2 
	: 	  slicefitApp  
		  slicefitubApp  
		  slicefitrandApp 
	: <threading>single
	  <location>$(TOP)/bin ;

