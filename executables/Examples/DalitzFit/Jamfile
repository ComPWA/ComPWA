########### DalitzFit applications #############

project ComPWA/executables/DalitzFit
	: requirements 
	  <include>.

       <library>/boost//program_options
       <library>/boost//filesystem
       <library>/boost//serialization
      <library>/boost//thread
      <library>/boost//system
      <library>/boost//date_time
      <library>/boost//log
      <library>/boost//log_setup


	  <library>/root
	  <linkflags>-lRooFit
	  <linkflags>-lGui
	  <linkflags>-lRooFitCore
	  <linkflags>-lboost_unit_test_framework
	  <library>$(TOP)//qft++ ;
	  
lib dalitzfit : 
        [ glob *.cpp : *App.cpp ]
        $(TOP)/Optimizer//Optimizer
        : : ;
        

exe dalitzfitApp : 
        DalitzFitApp.cpp 
        dalitzfit
        $(TOP)/Core//ComPWA
        $(TOP)/Physics/AmplitudeSum//AmplitudeSum
        $(TOP)/Physics/DPKinematics//DPKinematics
        $(TOP)/DataReader/RootReader//RootReader
        $(TOP)/DataReader/JakeReader//JakeReader
        $(TOP)/Optimizer//Optimizer
        $(TOP)/Estimator/MinLogLH//MinLogLH
        $(TOP)/Optimizer/Minuit2//Minuit2IF
        : ;
        
exe gendalitzApp : 
        GenDalitzApp.cpp 
        dalitzfit
        $(TOP)/Core//ComPWA
        $(TOP)/Physics/AmplitudeSum//AmplitudeSum  
        $(TOP)/Physics/DPKinematics//DPKinematics  
        : ;
        
exe dalitzplotApp : 
        DalitzDataPlotterApp.cpp 
        dalitzfit
        $(TOP)/Core//ComPWA
        $(TOP)/DataReader/RootReader//RootReader  
        $(TOP)/DataReader/JakeReader//JakeReader
        $(TOP)/Physics/DPKinematics//DPKinematics  
        : ;

install dist 
	: dalitzfit 
	: <threading>single
	  <location>$(TOP)/lib ;
        
install dist2 
	: 	  dalitzfitApp 
		  gendalitzApp 
		  dalitzplotApp
	: <threading>single
	  <location>$(TOP)/bin ;

