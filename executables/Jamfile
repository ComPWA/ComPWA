project ComPWA/executables 
	: requirements 
	  <include>.

       <library>/boost//program_options
       <library>/boost//filesystem
       <library>/boost//serialization
      <library>/boost//thread
      <library>/boost//system
      <library>/boost//date_time
      <library>/boost//log
      <library>/boost//log_setup


	  <library>/root
	  <linkflags>-lgomp
	  <linkflags>-lRooFit
	  <linkflags>-lRooFitCore
	  <linkflags>-lboost_unit_test_framework
	  <library>$(TOP)//qft++ ;
	  
    build-project test ;
	sources = $(sources) [ glob test/*.cpp : *.Test.cpp ] ;
	
	build-project DalitzFit ;
	sources = $(sources) [ glob DalitzFit/*.cpp : *.Test.cpp ] ;
	
	build-project SliceFit ;
	sources = $(sources) [ glob SliceFit/*.cpp : *.Test.cpp ] ;
	
#	build-project AmpPlotter  ;
