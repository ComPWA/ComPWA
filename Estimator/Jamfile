########### Estimator Jamfile #############
path-constant ESTIMATOR : . ;

# libEstimator.so will consist of these packages:

sources = [ glob *.cpp ] ;
if $(build_ChiOneD)
{
	build-project ChiOneD ;
	sources = $(sources) $(ESTIMATOR)/ChiOneD//ChiOneD ;
}
if $(build_MinLogLH)
{
	build-project MinLogLH ;
	sources = $(sources) $(ESTIMATOR)/MinLogLH//MinLogLH ;
}
if $(build_MinLogLHbkg)
{
	build-project MinLogLHbkg ;
	sources = $(sources) $(ESTIMATOR)/MinLogLHbkg//MinLogLHbkg ;
}
if $(build_SliceFit)
{
	build-project SliceFit ;
	sources = $(sources) $(ESTIMATOR)/SliceFit//SliceFit ;
}

# Build libEstimator.so
lib Estimator : 
        $(sources)
        ;

install dist : Estimator : <location>$(TOP)/lib ;
