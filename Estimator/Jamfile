########### Estimator Jamfile #############
path-constant ESTIMATOR : . ;

# libEstimator.so will consist of these packages:
build-project ChiOneD ;
build-project MinLogLH ;
build-project MinLogLHbkg ;
build-project SliceFit ;
#build-project StockLeastSquares ;

# Build libEstimator.so
lib Estimator : 
        [ glob *.cpp ]
        $(ESTIMATOR)/ChiOneD//ChiOneD
        $(ESTIMATOR)/MinLogLH//MinLogLH
        $(ESTIMATOR)/MinLogLHbkg//MinLogLHbkg
        $(ESTIMATOR)/SliceFit//SliceFit
        #$(ESTIMATOR)/StockLeastSquares//StockLeastSquares
        ;

install dist : Estimator : <location>$(TOP)/lib ;
