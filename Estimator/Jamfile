########### Estimator Jamfile #############
path-constant ESTIMATOR : . ;

project ComPWA/Estimator 
	: requirements 
		<library>$(TOP)/Core//ComPWA 
		<library>$(TOP)/Optimizer//Optimizer 
		<library>$(TOP)/Physics//DPKinematics
		<include>$(ROOT_INC_PATH)
		<linkflags>$(ROOTLIBS)
;

# libEstimator.so will consist of these packages:
#sources = [ glob *.cpp ] ;
if $(build_ChiOneD) && $(build_ChiOneD) != 0
{
	build-project ChiOneD ;
	#sources = $(sources) [ glob ChiOneD/*.cpp ] ;
}
if $(build_MinLogLH) && $(build_MinLogLH) != 0
{
	build-project MinLogLH ;
	#sources = $(sources) [ glob MinLogLH/*.cpp ] ;
}
if $(build_SliceFit) && $(build_SliceFit) != 0
{
	build-project SliceFit ;
	#sources = $(sources) [ glob SliceFit/*.cpp ] ;
}

# Build libEstimator.so
lib Estimator : [ glob *.cpp ] ;

install dist : Estimator : <location>$(TOP)/lib ;
