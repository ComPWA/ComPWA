########### AsciiReader lib #############
# @brief
# This package is a data reader, which reads the data from ascii files
# @end
import os ;

local QFTINC = [ os.environ QFT_INCLUDE ] ;
local QFT = [ os.environ QFT ] ;

project :
	requirements
        <include>$(QFTINC)
	<linkflags>-L$(QFT)/lib
	<linkflags>-lqft++
	;

lib AsciiReader : 
        [ glob *.cpp : *Test.cpp ] 
        $(TOP)/Core//ComPWA  
        ;
        
#using testing ;
#lib boost_unit_test_framework ;
#run DataTest.cpp AsciiReader $(TOP)/Core//ComPWA boost_unit_test_framework ;

install dist : AsciiReader : <location>$(TOP)/lib ;

